    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- As a heading -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to "Desafio Ruby", home_path, :class => 'navbar-brand ml-auto' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      </button>

      <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if loja_signed_in? %>
                <li class="nav-item active">
                  <%= link_to "Conta", conta_path, :class => 'nav-link' %>
                </li>
          <% end %>
          <li class="nav-item">
            
          </li>
          <li class="nav-item active">
            <% if loja_signed_in? %>
                <%= link_to "Sair", destroy_loja_session_path, :method=>'delete', :class => 'nav-link' %>
            <% else %>
                <%= link_to "Entrar", new_loja_session_url, :class => 'nav-link' %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

